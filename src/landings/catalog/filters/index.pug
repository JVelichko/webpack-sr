            #carousel_svr_pf.carousel.slide(data-ride='carousel')
              .carousel-inner
                .carousel-item.active
                  img.img-fluid(src='~images/svr-pf65a.png', alt='svr-pf65a')
                .carousel-item
                  img.img-fluid(src='~images/svr-pf65a-cut.png', alt='svr-pf65a-cut')
              a.carousel-control-prev(href='#carousel_svr_pf', role='button', data-slide='prev')
                i.icon-scroll-arrow-to-left-1
                span.sr-only Previous
              a.carousel-control-next(href='#carousel_svr_pf', role='button', data-slide='next')
                i.icon-scroll-arrow-to-right-1
                span.sr-only Next
          .col-12
            table.table.table-striped
              thead
                tr
                  th Характеристики
                  th Значение
              tbody
                tr
                  td Объем верхней камеры
                  td 63,5 л
                tr
                  td Диапазон рабочих температур
                  td от -20 до +120 °C
                tr
                  td Материал корпуса
                  td AISI 316 Ti
                tr
                  td Материал рубашки и кожуха теплоизоляции
